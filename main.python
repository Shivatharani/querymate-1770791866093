def is_even_or_odd(number):
  """
  Checks if a given number is even or odd.

  Args:
    number: An integer.

  Returns:
    A string indicating whether the number is "Even" or "Odd".
  """
  if number % 2 == 0:
    return "Even"
  else:
    return "Odd"

# Example usage:
print(is_even_or_odd(4))  # Output: Even
print(is_even_or_odd(7))  # Output: Odd
print(is_even_or_odd(0))  # Output: Even
print(is_even_or_odd(-3)) # Output: Odd